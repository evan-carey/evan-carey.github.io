{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "compileOnSave": false,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}