{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Node, attach",
            "type": "node",
            "protocol": "inspector",
            "request": "attach",
            "port": 9229,
            "trace": true
        },
        {
            "name": "Chrome, launch",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}",
            "trace": true,
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}